# Ollama Configuration
OLLAMA_HOST=http://192.168.1.97:11434
OLLAMA_MODEL=llama3.1:8b
OLLAMA_TIMEOUT=120

# Qdrant Configuration (for Mem0)
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_COLLECTION=agent_memory

# Mem0 Configuration
MEM0_USER_ID=default_user
MEM0_AGENT_ID=pydantic_agent

# Langfuse Configuration
# Get keys from Langfuse dashboard after setup (http://localhost:3000)
LANGFUSE_HOST=http://langfuse-server:4000
LANGFUSE_PUBLIC_KEY=pk-lf-...
LANGFUSE_SECRET_KEY=sk-lf-...
LANGFUSE_ENABLED=true

# Guardrails AI Configuration
GUARDRAILS_ENABLED=true

# Agent Configuration
# Available templates: GENERAL_ASSISTANT, DATA_ANALYST, CODE_HELPER, CUSTOMER_SUPPORT, RESEARCH_ASSISTANT
AGENT_PROMPT_TEMPLATE=GENERAL_ASSISTANT
AGENT_NAME=Pydantic AI Agent
AGENT_MAX_TOKENS=2048
AGENT_TEMPERATURE=0.7

# Langfuse Server Configuration (for docker-compose)
NEXTAUTH_SECRET=your-secret-key-change-in-production
SALT=your-salt-change-in-production

# Logging
LOG_LEVEL=INFO
